<p id="notice"><%= notice %></p>

<table>
   <thead> 
    <tr>
      <th>Date</th>
      <th>Name</th>
      <th>Location</th>
      <th>Time</th>
      <th>Description</th>
      <th>Event Type</th>
    </tr>
  </thead>
<tbody>
  <h1 style="color: #500000">Events Attended</h1>
  <% @records = MemberAttendance.where(student_member_id: session[:userID]) %>
  <% @records.each do |record| %>
    <% @event = Event.find(record.event_id) %>
    <tr>
          <td><%= @event.date.strftime('%B %-d, %Y') %></td>
          <td><%= @event.name %></td>
          <td><%= @event.location %></td>
          <td><%= daylight_savings(@event.start_time).strftime('%l:%M %p')%> - <%=daylight_savings(@event.finish_time).strftime('%l:%M %p') %></td>
          <td><%= @event.description %></td>
          <td><%= @event.event_type %></td>  
    </tr>
  <% end %>
</table>
