<%= form_with(model: event) do |form| %>
  <% if event.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(event.errors.count, "error") %> prohibited this event from being saved:</h2>

      <ul>
        <% event.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :date %>
    <%= form.date_select :date %>
  </div>

  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name %>
  </div>

  <div class="field">
    <%= form.label :location %>
    <%= form.text_field :location %>
  </div>

  <div class="field">
    <%= form.label :start_time %>
    <%= form.time_select :start_time, {:ampm => true} %>
  </div>

  <div class="field">
    <%= form.label :finish_time %>
    <%= form.time_select :finish_time, {:ampm => true} %>
  </div>

  <div class="field">
    <%= form.label :description %>
    <%= form.text_field :description %>
  </div>

  <div class="field">
    <%= form.label :event_type %>
    <%= form.select :event_type, options_for_select(Event.event_types.map {|key, value| [key.humanize.capitalize, Event.event_types.key(value)]}, @event.event_type) %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
