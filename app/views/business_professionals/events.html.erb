<p id="notice"><%= notice %></p>
<table>
  <thead>
    <tr>
      <th>Date</th>
      <th>Name</th>
      <th>Location</th>
      <th>Time</th>
      <th>Description</th>
      <th>Event Type</th>
      <th>Status</th>
      <th colspan="3"></th>
    </tr>
    
  </thead>

  <tbody>

<h1>Current Events</h1>
    <% @events.each do |event| %>
      <% @businessattend = BusinessAttendance.find_by(business_professional_id: @business_professional.id, event_id: event.id) %>
      <% if !@businessattend %>
        <tr>
          <td><%= event.date.strftime('%B %-d, %Y') %></td>
          <td><%= event.name %></td>
          <td><%= event.location %></td>
          <td><%= daylight_savings(event.start_time).strftime('%l:%M %p')%> - <%= daylight_savings(event.finish_time).strftime('%l:%M %p') %></td>
          <td><%= event.description %></td>
          <td><%= event.event_type %></td>  
          <% @event_business_professional = EventBusinessProfessional.find_by(business_professional_id: @business_professional.id, event_id: event.id) %>
          <% if @event_business_professional %>
              <td>Registered</td>
              <td><%= link_to 'Unregister', unregister_event_business_professional_path(bid: @business_professional.id, eid: event.id, wid: 2), class: "registration-button" %></td>
              <td><%= link_to 'Attended', attended_business_professional_path(bid: @business_professional.id, eid: event.id, wid: 2), class: "registration-button" %></td>
          <% else %>
              <td>Not registered</td>
              <td><%= link_to 'Register', register_event_business_professional_path(bid: @business_professional.id, eid: event.id, wid: 2), class: "registration-button" %></td>
          <% end %>
        </tr>
      <% end %>
    <% end %>
  </tbody>
</table>
<%= link_to 'Back to dashboard', pages_user_dashboard_path %>






<h1 class="index-title">Register Myself</h1>
<div class="container">
<%= link_to 'Back to dashboard', pages_user_dashboard_path, class: "btn btn-primary btn-sm" %>
</div>

<div class="container py-2">
  <div class="row" data-masonry='{"percentPosition": true }'>
    
    <% @events.each do |event| %>  <!-- Loop through events -->
      <% @ev = Event.find(event.id) %>
        <% @businessattend = BusinessAttendance.find_by(business_professional_id: @business_professional.id, event_id: event.id) %>
          <% if !@businessattend %>

            <div class="col-sm-4 col-md-3 py-3">
                <div class="card shadow">

                    <div class="card-body">
                      <h3 class="card-title"><%= event.name %></h3>
                      <h6 class="card-subtitle mb-2 text-muted"><b style="color: black">Date:</b> <%= event.date.strftime('%B %-d, %Y') %></h6>
                      <h6 class="card-subtitle mb-2 text-muted"><b style="color: black">Location:</b> <%= event.location %></h6>
                      <h6 class="card-subtitle mb-2 text-muted"><b style="color: black">Time:</b> <%= daylight_savings(event.start_time).strftime('%l:%M %p')%> - <%=daylight_savings(event.finish_time).strftime('%l:%M %p') %></h6>
                      <h6 class="card-subtitle mb-2 text-muted"><b style="color: black">Event Type:</b> <%= event.event_type %></h6>
                      <p class="card-text"><%= event.description %></p>


                      <div>
                      <% @event_business_professional = EventBusinessProfessional.find_by(business_professional_id: @business_professional.id, event_id: event.id) %>
                      <% if @event_business_professional %>
                          Registered
                          <%= link_to 'Unregister', unregister_event_business_professional_path(bid: @business_professional.id, eid: event.id, wid: 2), class: "btn btn-primary btn-sm" %>
                          <%= link_to 'Attended', attended_business_professional_path(bid: @business_professional.id, eid: event.id, wid: 2), class: "btn btn-primary btn-sm" %>
                      <% else %>
                          <td>Not registered</td>
                          <td><%= link_to 'Register', register_event_business_professional_path(bid: @business_professional.id, eid: event.id, wid: 2), class: "btn btn-primary btn-sm" %></td>
                      <% end %>
                      </div>

                      <br>
                    </div>
                </div>
            </div>

          <% end %>
    <% end %>
  </div>
</div>