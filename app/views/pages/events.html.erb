<% if session[:isMember] %>
<% @student_member = StudentMember.find_by(uid: session[:uid])  %>
<% end %>

<% if session[:isBusinessProfessional] %>
<% @business_professional = BusinessProfessional.find_by(uid: session[:uid])  %>
<% end %>



<div class="card" style="width: 35%;margin: 0 auto;float: none;margin-bottom: 10px;margin-top:5%;">
  <ul class="list-group list-group-flush">
  <li class="list-group-item"><h1 class="index-title">Event Links</h1></li>
  <% if session[:isAdmin] %>
    <li class="list-group-item"><%= link_to 'create/edit/delete events', "/events" , class: 'btn btn-primary btn-lg'%></li>
    <li class="list-group-item"><%= link_to 'view students\' registration', "/event_student_members" , class: 'btn btn-primary btn-lg'%></li>
    <li class="list-group-item"><%= link_to 'view students\' attendance', "/member_attendances" , class: 'btn btn-primary btn-lg'%></li>
    <li class="list-group-item"><%= link_to 'view professionals\' registration', "/event_business_professionals" , class: 'btn btn-primary btn-lg'%></li>
    <li class="list-group-item"><%= link_to 'view professionals\' attendance', "/business_attendances" , class: 'btn btn-primary btn-lg'%></li>
  <% end %>

<% if session[:isMember] %>
<li class="list-group-item"><%= link_to 'register myself/enter code for events', events_student_member_path(@student_member.id) , class: 'btn btn-primary btn-lg'%></li>
<li class="list-group-item"><%= link_to 'view events I attended', student_member_attended_events_path(@student_member.id), class: 'btn btn-primary btn-lg'%></li>
<% end %>

<% if session[:isBusinessProfessional] %>
<li class="list-group-item"><%= link_to 'register myself for events', events_business_professional_path(@business_professional), class: 'btn btn-primary btn-lg'%></li>
<li class="list-group-item"><%= link_to 'view events I attended', attended_events_business_professional_path(@business_professional), class: 'btn btn-primary btn-lg'%></li>
<% end %>
</ul>
</div>