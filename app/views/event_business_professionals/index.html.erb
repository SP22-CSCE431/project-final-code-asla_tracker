        { title: 'Event Name', name: 'name' },
        { title: 'Event Date', name: 'date' },
        { title: 'Organization', name: 'org_name' },
        { title: 'First Name', name: 'first_name' },
        { title: 'Last Name', name: 'last_name' },
        { title: 'Email', name: 'email' },
        { title: '', name: 'show_link', sort: false },
        { title: '', name: 'show_link1', sort: false },
        { title: '', name: 'show_link2', sort: false }
      ],
      source:      '/event_business_professionals.json'
    });
  });
</script>
